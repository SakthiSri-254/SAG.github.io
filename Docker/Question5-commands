#Commands

  docker build .-t my_sample_app -f Dockerfile

  docker images

  docker run -p 8080:5000 -d - -name=my_sample_application my_sample_app

  docker ps


#Dockerfile


  vi Dockerfile

  #Dockerfile starts here

  FROM centos:7
  LABEL “about” = “This is a sample application file”
  RUN yum -y update
  RUN yum -y install python
  RUN yum -y install epel-release && yum clean all
  RUN yum -y install python-pip 
  RUN pip install flask
  COPY ./app.py /app.py
  CMD [“echo”, “File copied”]
  ENTRYPOINT FLASK_APP = /app.py flask run - -host 0.0.0.0

  #Dockerfile ends here



#Application file

  vi app.py


  #Start

  from flask import Flask
  app = Flask(_name_)
  @app.route(‘/‘)
  def disp():
    return ‘‘This is Sakthi Sri’s sample application’’

  #end
